# API 服务器地址（开发环境默认：本地后端 /api/v1）
# 生产示例：VITE_API_URL=https://dev-api.carbontrackapp.com/api
VITE_API_URL=http://localhost:8000/api/v1

# Cloudflare Turnstile 站点密钥（前端用）
# 开发可留空以便本地调试；生产必须配置
VITE_TURNSTILE_SITE_KEY=
# API Configuration
VITE_API_URL=http://localhost:8080/api/v1

# Turnstile Configuration (Cloudflare)
VITE_TURNSTILE_SITE_KEY=your-turnstile-site-key

# App Configuration
VITE_APP_NAME=CarbonTrack
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=false

# CDN/Assets
VITE_ASSETS_URL=
VITE_UPLOAD_URL=

# Default Language
VITE_DEFAULT_LANGUAGE=zh

